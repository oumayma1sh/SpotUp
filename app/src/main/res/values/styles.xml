<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style pour le texte de l'élément sélectionné dans le Spinner -->
    <style name="SpinnerItemText">
        <item name="android:textColor">@color/bleuviolet</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item> <!-- Texte en gras -->
    </style>

    <!-- Style pour les options du Spinner -->
    <style name="SpinnerDropDownItem">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/bleuviolet</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- Custom Filter Button Style -->
    <style name="FilterButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/filter_button_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
</resources>

